<div class="row">
    <div class="col-xl-6 col-lg-12" style="width: 100%;">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">User Autentication</h3>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form>
                        <div class="row">
                            <div class="mb-3 col-md-3">
                                <label class="mb-4 select2-label" for="username">
                                    Username <br>

                                    <select class="select2-with-label-single js-states d-block" id="username">
                                    </select>
                                </label>
                                <input type="hidden" id="hdautoid">
                            </div>
                            <div class="mb-3 col-md-3">
                                <label class="ckbox" for="SelectAllScreens">Select All</label>
                                <div class="clearfix">
                                    <input type="checkbox" id="txtSelectAllScreens" name="txtSelectAllScreens" class="" maxlength="50" tabindex="2">
                                </div>
                            </div>

                           

                            <!-- Add other form fields as needed -->
                        </div>
                        
                        <div style=" text-align: center !important; margin-top: 50px; margin-bottom: 20px;">
                            <button type="button" id="btnsubmit" class="btn btn-success"><span id="actiontype">Save</span></button>
                            <button type="button" id="btnclear" class="btn btn-danger">Clear</button>
                        </div>
                    </form>
                </div>




            </div>

            <div class="card-header">
                <h4 class="card-title">Screen Details</h4>
            </div>
            <div class="card-body">
                @*<div class="table-responsive" id="dynamic-table_wrapper">*@
                <div style="overflow-x: auto; width: 102%; margin-left: -1%;">
                    <table id="dynamic-tableUpload" class="table checkupload" style="border-bottom: 1px solid gainsboro; text-align:center">
                        <thead style="background-color: #a68dd6;">
                            <tr>
                                <th style="color: white;">Select</th>
                                <th style="color: white;">Screen Id</th>
                                <th style="color: white;">Screen Name</th>
                                <th style="color: white;">Function Name</th>

                            </tr>
                        </thead>
                        <tbody id="tbody" class="checkuploadbody" style="text-align:center;"></tbody>
                    </table>
                </div>
                @*</div>*@
            </div>

        </div>
    </div>
</div>
<style>
    table, th {
        font-size: 13px !important;
    }

    table, td {
        font-size: 12px !important;
