<!-- Your form and other content go here -->
<div class="row">
    <div class="col-xl-6 col-lg-12" style="width: 100%;">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title">GRN Entry</h3>
            </div>
            <div class="card-body">
                <div class="basic-form">
                    <form>
                        <div class="row">
                            <div class="mb-3 col-md-3">
                                <label class="form-label">GRN NO</label>
                                <input type="text" id="txtgrnno" class="form-control" placeholder="Enter GRN NO">
                                <input type="hidden" id="hdautoid">
                            </div>
                            <div class="mb-3 col-md-3">
                                <label class="form-label">GRN Date</label>
                                <input type="date" id="txtgrndate" class="form-control">
                            </div>
                        </div>

                        <div class="card-header" style="height:40px">
                            <h4 class="card-title">GRN Entry Details</h4>
                        </div>
                        <div class="row" style="margin-top:10px">
                            <div class="mb-3 col-md-3">
                                <label class="form-label">Item Code</label>
                                <input type="text" id="txtitemcode" class="form-control" placeholder="Enter Item Code">
                            </div>
                            <div class="mb-3 col-md-3">
                                <label class="form-label">Item Name</label>
                                <input type="text" id="txtitemname" class="form-control" placeholder="Enter Item Name">
                            </div>
                            <div class="mb-3 col-md-3">
                                <label class="form-label">Quantity</label>
                                <input type="text" id="txtquantity" class="form-control" placeholder="Enter Quantity">
                            </div>
                        </div>
                        <div class="row" style="display: flex; justify-content: flex-end; margin-right: 10px; ">
                            <a class="btn btn-rounded btn-info" style=" width: 5%; " id="btnadd" data-original-title="Add" title="Add">
                                <i class="fa fa-plus color-info"></i>
                                <span class="hidden-xs" id="actiontypeaddd">
                                </span>
                            </a>
                            <a href="javascript:;" class="btn btn-rounded btn-info" style=" width: 5%; margin-left: 4px; " id="btnremove" data-original-title="Clear" title="Clear">
                                <i class="bi bi-trash"></i>
                                <span class="hidden-xs">
                                </span>
                            </a>
                        </div>
                        <div class="card-body">
                            @*<div class="table-responsive" id="dynamic-table_wrapper">*@
                            <div style="overflow-x: auto; width: 102%; margin-left: -1%;">
                                <table class="table table-bordered table-responsive-sm" id="dynamic-tableChild" style="border-bottom: 1px solid gainsboro; text-align:center">
                                    <thead style="background-color: #a68dd6;">
                                        <tr>
                                            <th style="color: white;">Material Code</th>
                                            <th style="color: white;">Material Name</th>
                                            <th style="color: white;">Quantity</th>
                                            <th style="color: white;">Remove</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                    </tbody>
                                </table>
                            </div>
                            @*</div>*@
                        </div>


                    </form>
                </div>

                <div style=" text-align: center !important; margin-top: 50px; margin-bottom: 20px;">
                    <button type="button" id="btnsubmit" class="btn btn-success"><span id="actiontype">Save</span></button>
                    <button type="button" id="btnclear" class="btn btn-danger">Clear</button>
                </div>


            </div>

            <div class="card-header">
                <h4 class="card-title">GRN Entry Details</h4>
            </div>
            <div class="card-body">
                @*<div class="table-responsive" id="dynamic-table_wrapper">*@
                <div style="overflow-x: auto; width: 102%; margin-left: -1%;">
                    <table class="table table-bordered table-responsive-sm" id="dynamic-table" style="border-bottom: 1px solid gainsboro; text-align:center">
                        <thead style="background-color: #a68dd6;">
                            <tr>
                                <th style="color: white;">GRNNO</th>
                                <th style="color: white;">DATE</th>
                                <th style="color: white;">EDIT</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                </div>
                @*</div>*@
            </div>

        </div>
    </div>
</div>
<div class="modal fade bd-example-modal-sm" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-sm">
        <div class="modal-content" style=" width: 300%;margin-left:-100%">
            <div class="modal-header" style="background-color: #a68dd6">
                <h4 class="card-title">Weather Information</h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">

                <div class="card-body">
                    <div class="weather-container">
                        <div class="weather-info">
                            <h5>Current Weather</h5>
                            <p id="weather-description"></p>
                            <p id="weather-temperature"></p>
                            <p id="weather-humidity"></p>
                            <p id="weather-wind"></p>
                            <p id="weather-sunrise"></p>
                            <p id="weather-sunset"></p>
                        </div>
                        <div id="weather-forecast" class="weather-forecast"></div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">

                <button type="button" class="btn btn-danger light" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>
<style>
    table, th {
        font-size: 13px !important;
    }

    table, td {
        font-size: 12px !important;
    }

    thead th {
        color: white;
    }
</style>

